<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jw_numbers.SplashActivity">

    <EditText
        android:id="@+id/getterStoreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введи ид хранилища номеров"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startGetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="начать поиск"
        app:layout_constraintEnd_toEndOf="@id/getterStoreId"
        app:layout_constraintStart_toStartOf="@id/getterStoreId"
        app:layout_constraintTop_toBottomOf="@id/getterStoreId" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/getterStoreId"
        app:layout_constraintStart_toStartOf="@id/getterStoreId"
        app:layout_constraintTop_toBottomOf="@id/startGetDate" />


</android.support.constraint.ConstraintLayout>
